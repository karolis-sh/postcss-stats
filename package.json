{
  "name": "postcss-stats",
  "version": "1.1.0",
  "description": "A PostCSS plugin to display stats",
  "keywords": [
    "css",
    "cssstats",
    "postcss",
    "postcss-plugin",
    "stats"
  ],
  "homepage": "https://github.com/karolis-sh/postcss-stats#readme",
  "bugs": {
    "url": "https://github.com/karolis-sh/postcss-stats/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/karolis-sh/postcss-stats.git"
  },
  "license": "MIT",
  "author": "Karolis Å arapnickis",
  "main": "lib/index.js",
  "files": [
    "lib"
  ],
  "scripts": {
    "format": "run-p format:*",
    "format:package.json": "sort-package-json package.json",
    "format:prettier": "prettier --write '**/*.*'",
    "lint": "run-p lint:*",
    "lint:js": "eslint . --ignore-path .gitignore",
    "lint:md": "markdownlint-cli2 '**/*.md' '!node_modules' '!**/node_modules'",
    "qa": "run-p lint test",
    "prerelease": "git checkout main && git pull && yarn",
    "release": "yarn qa && standard-version --no-verify && git push --follow-tags --no-verify && yarn publish",
    "test": "jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn qa"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix"
    ],
    "*.{md,json,yml}": [
      "pretty-quick --staged"
    ],
    "package.json": [
      "sort-package-json"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "dependencies": {
    "brotli-size": "0.1.0",
    "chalk": "^2.4.1",
    "cli-table": "^0.3.1",
    "cssstats": "^3.4.0",
    "gzip-size": "^5.1.1",
    "postcss": "^8.2.10",
    "pretty-bytes": "^5.3.0"
  },
  "devDependencies": {
    "@k.sh/eslint-plugin": "^0.7.0",
    "@k.sh/prettier-config": "^0.4.1",
    "cssnano": "^4.1.10",
    "cz-conventional-changelog": "^3.1.0",
    "eslint": "^8.31.0",
    "fs-extra": "^9.0.1",
    "husky": "^4.2.5",
    "jest": "^26.5.3",
    "lint-staged": "^10.1.3",
    "markdownlint-cli2": "^0.0.10",
    "npm-run-all": "^4.1.5",
    "postcss-replace": "^1.1.2",
    "prettier": "^2.8.1",
    "prettier-plugin-sh": "^0.12.8",
    "pretty-quick": "^3.1.3",
    "sort-package-json": "^2.1.0",
    "standard-version": "^9.0.0"
  }
}
